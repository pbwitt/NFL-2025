  <div class="card table-wrap">
    <table id="tbl">
      <thead>
        <tr>
          <th>Game</th><th>Player</th><th>Book</th><th>Bet</th>
          <th class="num">Line</th>
          <th class="num">Mkt Odds</th><th class="num">Fair</th>
          <th class="num">Mkt %</th><th class="num">Model %</th>
